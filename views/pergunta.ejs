<%- include('./partials/header.ejs')%>

    <body>
        <%- include('./partials/navbar.ejs')%>

            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>
                <form method="post" action="/responder">
                    <h3>Ajude o amigo com uma resposta</h3>
                    <label>Resposta:</label>
                    <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea>
                    <br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-dark">Responder</button>
                </form>
                <hr>
                <h3>Respostas</h3>
                <hr>
                <% respostas.forEach(resposta=> {%>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <%= resposta.corpo %>
                            </p>
                        </div>
                    </div>

                    <% }) %>
            </div>
    </body>
    <%- include('./partials/footer.ejs')%>